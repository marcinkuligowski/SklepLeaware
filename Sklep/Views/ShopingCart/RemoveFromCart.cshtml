@model Model.ViewModels.ShoppingCartViewModel

@{
    ViewBag.Title = "RemoveFromCart";
}

<h2>RemoveFromCart</h2>
<h3>
    <em>Review</em> your cart:
</h3>

<button type="button" class="btn btn-default">@Html.ActionLink("Checkout", "Submit", "Checkout")</button> <p>Click to submit!</p>
<br />


<div id="update-message">
</div>
<table class="table table-striped">
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Price (each)
        </th>
        <th>
            Quantity
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.CartItems)
    {
        <tr id="row-@item.RecordId">
            <td>
                @Html.ActionLink(item.Product.Name, "Details", "Store", new { id = item.ProductId }, null)
            </td>
            <td>
                @item.Product.Price
            </td>
            <td id="item-count-@item.RecordId">
                @item.Count
            </td>
            <td>

                <button type="button" class="btn btn-danger">@Html.ActionLink("Remove", "RemoveFromCart", "ShopingCart", new { id = item.ProductId }, "")</button>

            </td>
        </tr>
    }
    <tr>
        <td>
            Total
        </td>
        <td></td>
        <td></td>
        <td id="cart-total">
            @Model.CartTotal
        </td>
    </tr>
</table>


<br />
<button type="button" class="btn btn-default">@Html.ActionLink("Go back Shoping", "Index", "Store")</button> 